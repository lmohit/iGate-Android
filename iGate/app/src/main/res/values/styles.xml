<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E30425</item>
        <item name="colorPrimaryDark">#E30425</item>
        <item name="colorAccent">#E30425</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewTitleTheme">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#E30425</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewSubTextTheme">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="TextViewVisitorDetailsTheme">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextVisitorDetailsTheme">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Button">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">17dp</item>
    </style>

</resources>